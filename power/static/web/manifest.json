  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your personal dashboard",
      "url": "/static/web/index.html#dashboard",
      "icons": [
        {
          "src": "icons/shortcut-dashboard.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Add Task",
      "short_name": "Add Task",
      "description": "Create a new task",
      "url": "/static/web/index.html#tasks",
      "icons": [
        {
          "src": "icons/shortcut-task.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Calendar",
      "short_name": "Calendar",
      "description": "View your calendar and events",
      "url": "/static/web/index.html#calendar",
      "icons": [
        {
          "src": "icons/shortcut-calendar.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Health",
      "short_name": "Health",
      "description": "Track your health metrics",
      "url": "/static/web/index.html#health",
      "icons": [
        {
          "src": "icons/shortcut-health.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "/static/web/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "file_handlers": [
    {
      "action": "/static/web/index.html#import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "text/calendar": [".ics"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "palos",
      "url": "/static/web/index.html?action=%s"
    }
  ],
  
  "share_target": {
    "action": "/static/web/index.html#share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}